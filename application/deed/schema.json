{
 "definitions": {
     "title_number": {
       "pattern": "^([A-Z]{0,3}[1-9][0-9]{0,5}|[0-9]{1,6}[ZT])$",
       "type": "string"
     },
   "PrivateIndividualName": {
           "type": "object",
           "properties": {
               "surname": {
                   "type": "string",
                   "pattern": "^[A-z]+$"
               },
               "forename": {
                   "type": "string",
                    "pattern": "^[A-z]+$"
               },
               "middle_name": {
                   "type": "string"
               },
               "dob": {
                 "type": "string",
                 "pattern": "^(0[1-9]|[12][0-9]|3[01])[\\/\\-](0[1-9]|1[012])[\/\\-]\\d{4}$"
               },
               "gender": {
               "type": "string",
               "enum": ["Male", "Female", "Not Specified"]
             },
             "phone_number": {
               "type": "string",
               "pattern": "^(07[\\d]{9})$"
             },
           "address":{
                 "type": "string",
                 "pattern": " [A-Z]{1,2}[0-9R][0-9A-Z]? [0-9](?:A-Z-245|[^CIKMOV]){2}"
               }
           },
           "required": [
               "surname","forename", "dob", "phone_number", "address"
           ],
           "additionalProperties": false
       }
  },
  "properties": {
    "title_number": {
      "$ref": "#/definitions/title_number"
    },
    "borrowers":{
      "type": "array",
      "minItems": 1,
      "items":
        {
          "$ref": "#/definitions/PrivateIndividualName"
        }

    }
  },
  "required": ["title_number", "borrowers"],
  "type": "object",
  "additionalProperties": false
}